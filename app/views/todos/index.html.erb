<main class="MyTodoMain">
    <article>
        <h1 class="MyTodo-title">My To-do List</h1>
        <section class="MyTodo">
            <input class="MyTodo-text" type="text" placeholder="What's next?">
            <input class="MyTodo-date" type="date">
            <input class="MyTodo-button" type="button" value="Add">
        </section>

    <%= render partial: "todo-section", locals: {
       section_title: "Overdue",
       todos: Todo.overdue.where(completed: false),
       show_due_date: true
       } %> 
    
    <%= render partial: "todo-section", locals: {
       section_title: "Due Today",
       todos: Todo.duetoday,
       show_due_date: false
       } %> 
    
    <%= render partial: "todo-section", locals: {
       section_title: "Due Later",
       todos: Todo.duelater,
       show_due_date: true
       } %>     

    </article>
</main>
